#include <stdio.h>
#include <string.h>

int main() {
   char str[100];
   int i, len;
   int freq[256] = {0}; // Initialize frequency array with 0

   printf("Enter a string: ");
   scanf("%s", str);

   len = strlen(str);

   // Count frequency of each character
   for(i = 0; i < len; i++) {
      freq[str[i]]++;
   }

   // Display frequency of each character
   printf("The count of each character in the string %s\n", str);
   for(i = 0; i < 256; i++) {
      if(freq[i] != 0) {
         printf("%c %d\n", i, freq[i]);
      }
   }

   return 0;
}
