#include <stdio.h>

void add(int *a, int *b, int *sum) {
   *sum = *a + *b;
}

int main() {
   int num1, num2, result;
   
   printf("Enter the first number: ");
   scanf("%d", &num1);
   
   printf("Enter the second number: ");
   scanf("%d", &num2);
   
   add(&num1, &num2, &result);
   
   printf("Sum of %d and %d is %d\n", num1, num2, result);
   
   return 0;
}
