#include <stdio.h>

int main() {
    int matrix1[10][10], matrix2[10][10];
    int rows1, columns1, rows2, columns2, i, j;
    int equal = 1; // assume matrices are equal by default

    printf("Input Rows and Columns of the 1st matrix: ");
    scanf("%d %d", &rows1, &columns1);

    printf("Input Rows and Columns of the 2nd matrix: ");
    scanf("%d %d", &rows2, &columns2);

    if(rows1 != rows2 || columns1 != columns2) {
        printf("Matrices cannot be compared.\n");
        return 0;
    }

    printf("Input elements in the first matrix:\n");
    for(i = 0; i < rows1; i++) {
        for(j = 0; j < columns1; j++) {
            printf("element - [%d],[%d] : ", i, j);
            scanf("%d", &matrix1[i][j]);
        }
    }

    printf("Input elements in the second matrix:\n");
    for(i = 0; i < rows2; i++) {
        for(j = 0; j < columns2; j++) {
            printf("element - [%d],[%d] : ", i, j);
            scanf("%d", &matrix2[i][j]);
        }
    }

    // compare matrices
    for(i = 0; i < rows1; i++) {
        for(j = 0; j < columns1; j++) {
            if(matrix1[i][j] != matrix2[i][j]) {
                equal = 0;
                break;
            }
        }
    }

    if(equal)
        printf("Two matrices are equal.\n");
    else
        printf("Two matrices are not equal.\n");

    return 0;
}
